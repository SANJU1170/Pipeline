pipeline {
	agent none
		stages {
			stage ('BUILD'){
				input {  message 'enter something'}
				agent { label 'agent1' }
				steps {
					echo "This is Build stage"
					  }
				   }  
				
			stage ('TEST'){
				agent { label 'slave1' }
				steps {
					echo "This is Test stage"
					  }
				   }  	
				
			stage ('DEPLOY'){
				agent { label 'slave2' }
				steps {
					echo "This is Deploy stage"
					  }
				   } 	
				}
	      }
